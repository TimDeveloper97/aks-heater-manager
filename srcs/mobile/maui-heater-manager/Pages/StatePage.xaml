<?xml version="1.0" encoding="utf-8" ?>
<domain:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_heater_manager.Pages.StatePage"
             xmlns:domain="clr-namespace:maui_heater_manager.Domains"
             xmlns:viewmodels="clr-namespace:maui_heater_manager.ViewModels"
             x:TypeArguments="viewmodels:StateViewModel"
             NavigationPage.HasBackButton="False"
             xmlns:xct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False"
             Title="StatePage">
    <ContentPage.Behaviors>
        <xct:EventToCommandBehavior
                EventName="Appearing"
                Command="{Binding PageAppearingCommand}" />
    </ContentPage.Behaviors>
    <!--menu item log-->
    <StackLayout Padding="10">
        <Label Text="Trạm thiết bị" FontSize="30" Margin="0,10,0,20"/>

        <CollectionView ItemsSource="{Binding States}" VerticalScrollBarVisibility="Never">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Frame Padding="0" BackgroundColor="{Binding Color}">
                            <Grid ColumnDefinitions="50,*,auto" Margin="15,10">
                                <Image Source="{Binding Icon}" HeightRequest="30" WidthRequest="30" />
                                <StackLayout Grid.Column="1">
                                    <Label Text="{Binding Title}" VerticalOptions="Center" FontSize="Title"/>
                                    <Label Text="{Binding Description}" VerticalOptions="Center" FontSize="Subtitle" TextColor="{StaticResource Gray300}"/>
                                </StackLayout>
                                <Label Grid.Column="2" Text="{Binding Version, StringFormat='v{0}'}" VerticalOptions="Center" FontSize="Subtitle"/>
                            </Grid>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type domain:BasePage}}, Path=BindingContext.NavigateCommand}" CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                        <Line HeightRequest="1"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</domain:BasePage>