<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="maui_heater_manager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:maui_heater_manager"
    xmlns:page="clr-namespace:maui_heater_manager.Pages"
    Shell.FlyoutBehavior="Flyout"
    WidthRequest="300"
    Title="maui_heater_manager">

    <FlyoutItem Title="Now" Icon="home.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate page:NowPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Usage" Icon="chart.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate page:UsagePage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Devices" Icon="device.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate page:DevicePage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Settings" Icon="setting.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate page:SettingPage}" />
        </Tab>
    </FlyoutItem>
</Shell>
